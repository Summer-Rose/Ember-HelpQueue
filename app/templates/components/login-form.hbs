{{#if session.isAuthenticated}}
  <div id="signed-in">
    <h4><b>You already signed in</b></h4>
  </div>
{{else}}
<form>
  <div class="form-group">
    {{input value=email id=email class="form-control" placeholder="E-mail Address"}}
  </div>
  <div class="form-group">
    {{input value=password id=password type="password" class="form-control" placeholder="Password"}}
  </div>
  <button {{action 'login'}} class="btn btn-lg btn-default submitBtn">Login</button>
</form>
{{/if}}
